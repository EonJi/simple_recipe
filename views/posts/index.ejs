<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
      <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
      <style>
          body>h1{
              font-family: 'Indie Flower', cursive;
              font-size:60px;
              text-align:center;
              color:darkcyan;
          }
      </style>
  </head>
  <body>
    <% include ../partials/nav %>
      
       <p style="text-align: center;"><img src="pict/도구.png"></p>
      <h1>Board</h1>
      <hr>
    <div class="container post post-index">

      <div class="buttons">
        <a class="btn btn-default" href="/posts/new">New</a>
      </div>

      <table class="table table-striped posts">
        <thead>
          <tr>
            <th class="title">Title</th>
            <th class="date">Date</th>
          </tr>
        </thead>
        <tbody>
          <% if(posts == null || posts.length == 0){ %>
            <tr>
              <td class="noData" colspan=100> 게시물을 추가해주세요! </td>
            </tr>
          <% } %>
          <% posts.forEach(function(post) { %>
            <tr>
              <td class="title">
                <a href="/posts/<%= post._id %>"><div><%= post.title %></div></a>
              </td>
              <td class="date">
                <%= post.createdDate %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>  <!-- container end -->
  </body>
</html>
